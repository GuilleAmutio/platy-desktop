{
  "package": {
    "productName": "rekcod-desktop",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist/rekcod-desktop",
    "devPath": "http://localhost:4200",
    "beforeDevCommand": "yarn start",
    "beforeBuildCommand": "yarn build"
  },
  "tauri": {
    "pattern": {
      "use": "brownfield"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.rekcod.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico" // This is the one for the app, others are just diff sizes
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true,
      "os": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      }
    },
    "windows": [
      {
        "title": "",
        "skipTaskbar": false,
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": false,
        "center": false,
        "fileDropEnabled": true,
        "focus": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
